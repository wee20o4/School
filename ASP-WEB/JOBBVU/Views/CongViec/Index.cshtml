@model IEnumerable<CongViec>

<h2>Danh sách công việc</h2>
<a class="btn btn-primary" asp-action="Create">Đăng tuyển công việc</a>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Ngày đăng</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.TieuDe</td>
                <td>@job.NgayDang.ToShortDateString()</td>
                <td>@job.TrangThai</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@job.MaCV">Chi tiết</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@job.MaCV">Chỉnh sửa</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@job.MaCV">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
